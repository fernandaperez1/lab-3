<div class="container">
  <h1>Contact Us</h1>
  <p class="lead">We'd love to hear from you! Fill out the form below:</p>

  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>

  <%= form_with url: contact_path, method: :post, class: "mt-3" do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :message, "Message", class: "form-label" %>
      <%= f.text_area :message, class: "form-control", required: true %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary" %>
  <% end %>
</div>
